@page
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Social Media Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            margin: 0; /* Remove default body margins */
        }
        .h {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px; /* Add minimal padding for breathing room */
        }
        .hover-bg-primary-dark:hover {
            background-color: #005f99; /* Darker primary for hover */
        }
        .hover-bg-danger-dark:hover {
            background-color: #c82333; /* Darker danger for hover */
        }
    </style>
</head>
<body class="bg-light">
    <div class="h">
        <div class="card p-2 shadow-lg" style="max-width: 800px; width: 100%;">
            <h1 class="text-center text-dark mb-4">Connect with Us</h1>
            <div class="d-flex flex-column gap-3">
                <a href="https://x.com" target="_blank" class="d-flex align-items-center justify-content-between p-3 bg-primary text-white rounded hover-bg-primary-dark text-decoration-none">
                    <div class="d-flex align-items-center gap-2">
                        <i class="fab fa-x-twitter fs-5"></i>
                        <span>X Platform</span>
                    </div>
                    <i class="fas fa-arrow-right"></i>
                </a>
                <a href="https://facebook.com" target="_blank" class="d-flex align-items-center justify-content-between p-3 bg-primary text-white rounded hover-bg-primary-dark text-decoration-none">
                    <div class="d-flex align-items-center gap-2">
                        <i class="fab fa-facebook-f fs-5"></i>
                        <span>Facebook</span>
                    </div>
                    <i class="fas fa-arrow-right"></i>
                </a>
                <a href="https://instagram.com" target="_blank" class="d-flex align-items-center justify-content-between p-3 bg-danger text-white rounded hover-bg-danger-dark text-decoration-none">
                    <div class="d-flex align-items-center gap-2">
                        <i class="fab fa-instagram fs-5"></i>
                        <span>Instagram</span>
                    </div>
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>