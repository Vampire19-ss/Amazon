@{
    ViewData["Title"] = "Create Amazon Premium Account";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

</head>
<body class="bg-white">
    <div class="d-flex justify-content-center align-items-center min-vh-100">
        <div class="card col-11 col-md-6 col-lg-4 border-0 shadow-lg rounded-4 bg-white">
            <div class="card-body p-4 p-md-5">
                <div class="text-center mb-4">
                    <div class="mb-3">
                        <span class="h3 fw-bold text-warning"></span>
                    </div>
                    <h1 class="h2 fw-bold text-dark">Create Account</h1>
                    <p class="text-muted small">Join for exclusive benefits</p>
                </div>

                <form method="post">
                    <div class="mb-3">
                        <div class="form-floating">
                            <input type="text" class="form-control border-warning" id="Username" name="Username" placeholder="Username" required>
                            <label for="Username" class="text-dark">Username</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-floating">
                            <input type="email" class="form-control border-warning" id="Email" name="Email" placeholder="Email address" required>
                            <label for="Email" class="text-dark">Email address</label>
                        </div>
                        <div class="text-muted small mt-2">Secured with end-to-end encryption.</div>
                    </div>

                    <div class="mb-3">
                        <div class="form-floating">
                            <input type="password" class="form-control border-warning" id="Password" name="Password" placeholder="Password" required>
                            <label for="Password" class="text-dark">Password</label>
                        </div>
                        <div class="text-muted small mt-2">
                            <div>• 8 characters minimum</div>
                            <div>• Include a number and symbol</div>
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input border-warning" id="TermsCheck" required>
                        <label for="TermsCheck" class="form-check-label text-dark small">
                            I agree to the <a href="#" class="text-warning text-decoration-none">Premium Terms and Conditions</a>
                        </label>
                    </div>

                    <button type="submit" class="btn btn-warning w-100 mb-3 fw-bold text-dark">
                        Create Your Account
                        <span class="ms-2">✨</span>
                    </button>

                    <div class="text-center mb-3">
                        <span class="text-muted small">Or sign up with</span>
                    </div>

                    

                    <div class="text-center my-3">
                        <span class="text-muted small">Already a member?</span>
                    </div>

                    <a href="/user/login" class="btn btn-outline-warning w-100 mb-3 fw-bold text-dark">Sign in</a>

                    <div>
                        @if (!string.IsNullOrEmpty(ViewBag.errormassage))
                        {
                            <div class="alert alert-danger d-flex align-items-center" role="alert">
                                <svg class="me-2" style="width: 18px; height: 18px;" viewBox="0 0 24 24">
                                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
                                </svg>
                                <span>@ViewBag.errormassage</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.secessmessage) || !string.IsNullOrEmpty(ViewBag.SuccessMessage))
                        {
                            <div class="alert alert-success d-flex align-items-center" role="alert">
                                <svg class="me-2" style="width: 18px; height: 18px;" viewBox="0 0 24 24">
                                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                                </svg>
                                <span>@(ViewBag.secessmessage ?? ViewBag.SuccessMessage)</span>
                            </div>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN6jIeHz" crossorigin="anonymous"></script>
</body>
</html>