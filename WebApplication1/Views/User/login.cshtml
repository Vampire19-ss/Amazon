@{
    ViewData["Title"] = "Amazon Premium Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

</head>
<body class="bg-white">
    <div class="d-flex justify-content-center align-items-center min-vh-100">
        <div class="card col-11 col-md-6 col-lg-4 border-0 shadow-lg rounded-4 bg-white">
            <div class="card-body p-4 p-md-5">
                <div class="text-center mb-4">
                    <div class="mb-3">
                        <svg viewBox="0 0 100 24" class="d-inline-block text-warning" style="height: 40px;">
                            <path d="M10,12 L20,12 L20,18 L10,18 Z M25,6 L35,6 L35,18 L25,18 Z M40,12 L50,12 L50,18 L40,18 Z M55,6 L65,6 L65,12 L55,12 Z M70,6 L80,6 L80,18 L70,18 Z" />
                        </svg>
                    </div>
                    <h1 class="h2 fw-bold text-dark"> Sign In</h1>
                    <p class="text-muted small">Unlock a world of exclusive benefits</p>
                </div>

                <form method="post">
                    <div class="mb-3">
                        <div class="form-floating">
                            <input type="email" id="email" name="Email" class="form-control border-warning" placeholder="Email or mobile phone number" required>
                            <label for="email" class="text-dark">Email or mobile phone number</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-floating">
                            <input type="password" id="password" name="Password" class="form-control border-warning" placeholder="Password" required>
                            <label for="password" class="text-dark">Password</label>
                        </div>
                        <div class="text-end mt-2">
                            <a asp-controller="user" asp-action="ForgotPassWord" class="text-warning text-decoration-none">Forgot your password?</a>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-warning w-100 mb-3 fw-bold text-dark">
                        Continue
                        <span class="ms-2">â†’</span>
                    </button>

                    <div class="text-center mb-3">
                        <span class="text-muted small">Or sign in with</span>
                    </div>


                    <div>
                        @if (!string.IsNullOrEmpty(ViewBag.errormassage))
                        {
                            <div class="alert alert-danger d-flex align-items-center" role="alert">
                                <svg class="me-2" style="width: 18px; height: 18px;" viewBox="0 0 24 24">
                                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
                                </svg>
                                <span>@ViewBag.errormassage</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                        {
                            <div class="alert alert-success d-flex align-items-center" role="alert">
                                <svg class="me-2" style="width: 18px; height: 18px;" viewBox="0 0 24 24">
                                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                                </svg>
                                <span>@ViewBag.SuccessMessage</span>
                            </div>
                        }
                    </div>
                </form>

                
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN6jIeHz" crossorigin="anonymous"></script>
</body>
</html>