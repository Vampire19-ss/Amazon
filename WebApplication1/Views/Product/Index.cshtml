@model WebApplication1.Models.ViewModels.ProductView

@{
    ViewData["Title"] = "Amaxon";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

</head>
<body class="bg-white">
    <h1 class="h4 fw-bold text-center text-warning my-4" style="animation: fadeIn 1s ease-out;">@ViewBag.Category</h1>

    <div class="container shadow h-100">
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="card mx-auto my-4 border-0 shadow-lg rounded-4 bg-white" style="max-width: 500px; animation: fadeIn 0.8s ease-out;">
                <div class="card-body text-center p-3">
                    <h3 class="h5 fw-bold text-warning mb-2">@ViewBag.Message</h3>
                    <div>
                        <svg class="mb-2 text-warning" style="width: 24px; height: 24px;" viewBox="0 0 24 24">
                            <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 15h2v-2h-2v2zm1-4c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2z"/>
                        </svg>
                        <p class="text-muted small">Browse our premium collection for amazing products</p>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
                @foreach (var product in Model.Products)
                {
                    <div class="col">
                        <div class="card border-0 shadow-lg rounded-4 h-100 position-relative" style="animation: fadeIn 0.5s ease-out; transition: transform 0.3s ease;">
                            <img src="@product.ProductImage" class="card-img-top rounded-top-4" alt="@product.ProductName" style="width: 100%; height: 150px; object-fit: cover;">
                            <div class="card-body p-3">
                                <h5 class="card-title fw-bold text-dark small text-truncate">@product.ProductName</h5>
                                <p class="card-text mb-2 small">
                                    Price: <span class="text-warning fw-semibold">@product.ProductPrice</span>
                                    <span class="text-muted d-block x-small">@product.ProductStock available</span>
                                </p>
                                <div class="d-flex gap-2">
                                    <a asp-controller="Product" asp-action="Details" asp-route-ProductId="@product.ProductId"
                                       class="btn btn-warning btn-sm fw-bold text-dark flex-grow-1" style="position: relative; overflow: hidden; transition: all 0.3s ease;">
                                        Details
                                        <span style="position: absolute; top: -50%; left: -60%; width: 200%; height: 200%; background: rgba(255, 255, 255, 0.3); transform: rotate(30deg); transition: left 0.3s ease;"></span>
                                    </a>
                                    
                                </div>
                            </div>
                            <span class="badge bg-warning text-dark position-absolute top-0 end-0 m-2 x-small">
                                <svg class="me-1" style="width: 10px; height: 10px;" viewBox="0 0 24 24">
                                    <path fill="currentColor" d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                                </svg>
                                Hot Item
                            </span>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN6jIeHz" crossorigin="anonymous"></script>
    <style>
       
        .card:hover {
            transform: translateY(-5px);
        }
        .btn:hover > span {
            left: 100%;
        }
    </style>
</body>
</html>