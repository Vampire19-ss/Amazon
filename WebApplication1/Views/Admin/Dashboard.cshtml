@{
}



    <title>Admin Dashboard</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: #f3f3f3; /* Amazon's light gray background */
            font-family: 'Arial', sans-serif;
        }
        .navbar {
            background-color: #131921; /* Amazon's dark navy header */
        }
        .navbar-brand, .navbar-text {
            color: #ffffff !important;
        }
        .dashboard-card {
            background-color: #ffffff;
            border: none;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin-top: 2rem;
        }
        .dashboard-title {
            color: #131921;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }
        .btn-amazon {
            background-color: #f0c14b; /* Amazon's orange button */
            border-color: #a88734;
            color: #111;
            font-weight: 600;
            padding: 0.75rem 1.5rem;
            border-radius: 4px;
            transition: background-color 0.2s;
        }
        .btn-amazon:hover {
            background-color: #e0b038;
            border-color: #957526;
        }
        .btn-amazon-secondary {
            background-color: #232f3e; /* Amazon's dark blue for secondary buttons */
            border-color: #1a252f;
            color: #ffffff;
            font-weight: 600;
            padding: 0.75rem 1.5rem;
            border-radius: 4px;
            transition: background-color 0.2s;
        }
        .btn-amazon-secondary:hover {
            background-color: #1a252f;
            border-color: #131921;
        }
    </style>


   

    <!-- Main Content -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="dashboard-card">
                    <h1 class="dashboard-title">Welcome to the Secure Admin Dashboard</h1>
                    <div class="d-flex flex-column gap-3">
                        <a class="btn btn-amazon" asp-controller="Admin" asp-action="CreateProduct">Create Product</a>
                        <a class="btn btn-amazon" asp-controller="Admin" asp-action="CreateBlog">Create Blog</a>
                        <a class="btn btn-amazon" asp-controller="Admin" asp-action="BlogList">View Blog List</a>
                        <a class="btn btn-amazon" asp-controller="Admin" asp-action="Getsupport">View customer support</a>
                        <a class="btn btn-amazon" asp-controller="Admin" asp-action="CreateSubscripation">Create Subscripation</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS (Optional for interactivity) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
