<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title class="ht">@ViewData["Title"] - Amexong</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
      .ht{
        color: #f3f1f1;
      }
        html, body {
            height: 100%;
            margin: 0;
        }
        body {
            display: flex;
            flex-direction: column;
        }
        main {
            flex: 1 0 auto;
            min-height: calc(100vh - 200px);
        }
        footer {
            flex-shrink: 0;
        }
        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
        }
        .content-wrapper {
            margin-top: 80px; /* Adjusted for taller navbar */
        }
        .navbar-brand img {
            height: 30px;
            width: auto;
        }
        .nav-search {
            flex-grow: 1;
            max-width: 600px;
        }
        .nav-search .form-control {
            border-radius: 0;
        }
        .nav-search .btn {
            border-radius: 0;
            background-color: #f3a847;
            border-color: #f3a847;
        }
        .nav-search .btn:hover {
            background-color: #e69500;
            border-color: #e69500;
        }
        .navbar-nav .nav-link {
            color: #ffffff !important;
        }
        .navbar-nav .nav-link:hover {
            color: #f3a847 !important;
        }
        .dropdown-menu {
            background-color: #232f3e;
            border: none;
        }
        .dropdown-menu .dropdown-item {
            color: #ffffff;
        }
        .dropdown-menu .dropdown-item:hover {
            background-color: #f3a847;
            color: #000000;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/a/a9/Amazon_logo.svg" alt="Amexong Logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon text-white "></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <form class="d-flex nav-search mx-3" role="search">
                        <select class="form-select me-2" style="width: auto;">
                            <option>All</option>
                            <option>Electronics</option>
                            <option>Clothing</option>
                            <option>Books</option>
                            <option>Home & Kitchen</option>
                        </select>
                        <input class="form-control me-2" type="search" placeholder="Search Amexong" aria-label="Search">
                        <button class="btn btn-warning" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> Account
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="accountDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="user" asp-action="login">Sign In</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="user" asp-action="Registor">Register</a></li>
                               
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="General">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="Electronics">Electronics</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="Clothing">Clothing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="bi bi-cart3 fs-5"></i>
                                <span class="badge bg-warning text-dark ms-1">0</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="content-wrapper">
        <div class="notification_bar">
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage as string))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @ViewBag.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>

        <div class="container">
            <main role="main" class="pb-3 mb-5 mt-5">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="bg-dark text-white py-4">
        <div class="container">
            <div class="row gy-3">
                <div class="col-6 col-md-3">
                    <h5 class="fw-bold mb-3">Get to Know Us</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a  class="text-light text-decoration-none"asp-controller="User" asp-action="AboutUs" >About us</a></li>
                        <li class="mb-2"><a  class="text-light text-decoration-none"asp-controller="User" asp-action="Press_Releases">Press Releases</a></li>
                        
                    </ul>
                </div>
                <div class="col-6 col-md-3">
                    <h5 class="fw-bold mb-3">Our Services</h5>
                    <ul class="list-unstyled">
                         <li class="mb-2"><a  class="text-light text-decoration-none "asp-controller="User" asp-action="Support">Support</a></li>           
                        <li class="mb-2"><a  class="text-light text-decoration-none"asp-controller="user" asp-action="Subscriptions">Subscriptions</a></li>
                       
                    </ul>
                </div>
                <div class="col-6 col-md-3">
                    <h5 class="fw-bold mb-3">Connect with Us</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a  class="text-light text-decoration-none"   asp-controller="User" asp-action="Viewblog" >Blog</a></li>
                        <li class="mb-2"><a  class="text-light text-decoration-none" asp-controller="User" asp-action="Socialmedia" >Social Media</a></li>
                        
                    </ul>
                  
                </div>
                <div class="col-6 col-md-3">
                    <h5 class="fw-bold mb-3">Stay Updated</h5>
                    <p class="text-light small">Subscribe for updates and offers.</p>
                    <form>
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Your email" aria-label="Email">
                            <button class="btn btn-warning" type="submit">Subscribe</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col text-center">
                    <a href="#" class="btn btn-outline-light btn-sm">Back to Top</a>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col text-center">
                    <p class="text-light small mb-0">© 2025 YourCompany. All rights reserved. | 
                        <a href="#" class="text-light text-decoration-none">Terms</a> | 
                        <a href="#" class="text-light text-decoration-none">Privacy</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>